<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/md_white_1000</item>
    </style>

    <style name="Button">

    </style>

    <style name="Button.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@color/md_black_1000_25</item>
    </style>

    <style name="Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@color/md_white_1000</item>
    </style>

    <style name="CardView.Container" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/card_padding</item>
    </style>

    <style name="TextView" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11dp</item>
    </style>

    <style name="TextView.Title" >
        <item name="android:textColor">@color/md_black_1000_75</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="TextView.Subtitle" >
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextView.Darken" >
        <item name="android:textColor">@color/md_black_1000_75</item>
    </style>

</resources>
