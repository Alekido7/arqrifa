<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="arqrifa.org.arquitecturarifamobile">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" / -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".app.ArquitecturaRifaApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".layout.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".layout.MainActivity" />
        <activity
            android:name=".layout.ReunionActivity"
            android:label="@string/title_reunion_activity" />
        <activity
            android:name=".layout.EncuestaActivity"
            android:label="@string/title_encuesta_activity" />
        <activity
            android:name=".layout.CuestionarioActivity"
            android:label="@string/title_cuestionario_activity" />
        <activity android:name=".layout.AsistenciaActivity" android:label=""/>
        <activity
            android:name=".layout.DeviceListActivity"
            android:label="Dispositivos Bluetooth" />
        <activity android:name=".layout.SplashAsistenciaActivity"></activity>
    </application>

</manifest>