<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ControladorUsuarios</servlet-name>
        <servlet-class>org.arqrifa.servlets.ControladorUsuarios</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorEncargados</servlet-name>
        <servlet-class>org.arqrifa.servlets.ControladorEncargados</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorAdministrador</servlet-name>
        <servlet-class>org.arqrifa.servlets.ControladorAdministrador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorReuniones</servlet-name>
        <servlet-class>org.arqrifa.servlets.ControladorReuniones</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControladorUsuarios</servlet-name>
        <url-pattern>/Usuarios</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorEncargados</servlet-name>
        <url-pattern>/Encargados</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorAdministrador</servlet-name>
        <url-pattern>/Admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorReuniones</servlet-name>
        <url-pattern>/Reuniones</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>/WEB-INF/Vistas/login.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/Vistas/Error/no_encontrado.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/Vistas/Error/error_interno.jsp</location>
    </error-page>

</web-app>
